/**
 * Product media data template
 *
 * @see Mage_Catalog_Block_Product_View_Media
 */
?>
<?php
    $_product = $this->getProduct();
    $_helper = $this->helper('catalog/output');
?>

<div class="left-col-sm">
    <div class="product-image">
        <?php
            $_img = '<img id="image" class="img-responsive" src="'.$this->helper('catalog/image')->init($_product, 'image').'" alt="'.$this->escapeHtml($this->getImageLabel()).'" title="'.$this->escapeHtml($this->getImageLabel()).'" />';
            echo $_helper->productAttribute($_product, $_img, 'image');
        ?>
    </div>
</div>

<div class="right-col-sm">
    <?php if (count($this->getGalleryImages()) > 0): ?>
    <div class="more-views">
        <ul class="media-grid-thumbnail">
        <?php foreach ($this->getGalleryImages() as $_image): ?>
            <li>
                <a href="#" title="<?php echo $this->escapeHtml($_image->getLabel()) ?>" data-src="<?php echo $this->helper('catalog/image')->init($_product, 'image', $_image->getFile()); ?>"><img class="img-responsive" src="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'thumbnail', $_image->getFile())->resize(56); ?>" alt="<?php echo $this->escapeHtml($_image->getLabel()) ?>" /></a>
            </li>
        <?php endforeach; ?>
        </ul>
    </div>
    <?php endif; ?>
</div>

<script type="text/javascript">
jQuery(document).ready(function(){
    var wrapperWidth = jQuery('.product-img-box .product-image').outerWidth();
    var setWrapperStyle = function() {
        if (this.width < wrapperWidth) {
            jQuery('.product-img-box .product-image').css('width', this.width);
        } else {
            jQuery('.product-img-box .product-image').css('width', wrapperWidth);
        }
    }
    jQuery('.product-img-box .product-image').zoom({ callback: setWrapperStyle });
    jQuery('.media-grid-thumbnail').find('a').click(function(e) {
        e.preventDefault();
        jQuery('.product-img-box .product-image').trigger('zoom.destroy');
        jQuery('.product-img-box .product-image').find('#image').attr('src', jQuery(this).data('src'));
        jQuery('.product-img-box .product-image').zoom({ callback: setWrapperStyle, url: jQuery(this).data('src') });
    });
});
</script>
