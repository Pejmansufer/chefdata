<?php $_items = $this->getReviewsCollection()->getItems();?>
<?php if (count($_items)):?>
    <?php
    $product = $this->getProductId();
    $data = Mage::getModel('review/review_summary')
        ->setStoreId(Mage::app()->getStore()->getId())
        ->load($product);
    $summary = $data->getRatingSummary();
    $count = $data->getReviewsCount();
    $star = (5 * $summary) / 100;
    ?>
<div class="box-collateral box-reviews" id="customer-reviews">
    <h2><?php echo $this->__('Customer Reviews') ?></h2>
    <div class="ratings clearfix" itemprop="aggregateRating" itemscope itemtype="http://schema.org/AggregateRating">
        <div><?php echo $this->__('Overall User Rating: ') ?></div>
        <div class="rating-box">
            <div class="rating" style="width:<?php echo $summary ?>%;"></div>
        </div>
        <div><?php echo $this->__('(<span itemprop="ratingValue">%d</span> stars from <span itemprop="reviewCount">%d</span> reviews)', $star, $count) ?></div>
    </div>
    <?php foreach ($_items as $_review):?>
    <div class="review" itemprop="review" itemscope itemtype="http://schema.org/Review">
        <?php $_votes = $_review->getRatingVotes(); ?>
        <?php if (count($_votes)): ?>
            <?php $sum = 0; ?>
            <?php foreach ($_votes as $_vote): ?>
                <?php $sum += $_vote->getValue() ?>
            <?php endforeach; ?>
            <?php $percent = (($sum/count($_votes))/5) * 100; ?>
            <div class="rating-box">
                <div class="rating" style="width:<?php echo $percent ?>%;"></div>
            </div>
        <?php endif; ?>
        <p itemprop="reviewBody"><?php echo nl2br($this->escapeHtml($_review->getDetail())) ?></p>
        <p>
            <span itemprop="author" itemscope itemtype="http://schema.org/Person">
                <span itemprop="name"><strong><?php echo $this->escapeHtml($_review->getNickname()) ?></strong></span>
            </span>
            <meta itemprop="datePublished" content="<?php echo $this->formatDate($_review->getCreatedAt()) ?>">
            <small class="date"><?php echo $this->__('Posted on %s', $this->formatDate($_review->getCreatedAt()), 'long') ?></small>
        </p>
    </div>
    <?php endforeach; ?>
</div>
<?php endif;?>
