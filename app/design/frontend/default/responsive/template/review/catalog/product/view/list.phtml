<?php $_items = $this->getReviewsCollection()->getItems();?>
<?php if (count($_items)):?>
<div class="review-list col-md-12 no-pad">
    <h2><?php echo $this->__('Customer Reviews') ?></h2>
    <?php foreach ($_items as $_review):?>
    <div class="review-item">
        <?php $_votes = $_review->getRatingVotes(); ?>
        <?php if (count($_votes)): ?>
            <?php foreach ($_votes as $_vote): ?>
                <div class="rating-box">
                    <div class="rating" style="width:<?php echo $_vote->getPercent() ?>%;"></div>
                </div>
            <?php endforeach; ?>
        <?php endif; ?>
        <p><?php echo nl2br($this->escapeHtml($_review->getDetail())) ?></p>
        <p><strong><?php echo $this->escapeHtml($_review->getNickname()) ?></strong> <small class="date"><?php echo $this->__('Posted on %s', $this->formatDate($_review->getCreatedAt()), 'long') ?></small></p>
    </div>
    <?php endforeach; ?>
</div>
<?php endif;?>
