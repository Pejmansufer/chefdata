<?xml version="1.0"?>
<layout version="0.1.0">
	<reviewemail_success_index>
		<reference name="head">
			<action method="addCss"><stylesheet>magmodules/reviewemail/style.css</stylesheet></action>
		</reference>
		<reference name="root">
			<action method="setTemplate"><template>page/2columns-left.phtml</template></action>
		</reference>
		<reference name="content">
			<block type="reviewemail/success" name="reviewemail" template="magmodules/reviewemail/success.phtml" />
		</reference>
	</reviewemail_success_index>
	<reviewemail_form_index>
		<reference name="head">
			<action method="addCss"><stylesheet>magmodules/reviewemail/style.css</stylesheet></action>
			<action method="addItem"><type>skin_css</type><name>magmodules/reviewemail/rating-ie.css</name><params/><if>lt IE 9</if></action>
			<action method="addItem"><type>skin_js</type><name>magmodules/reviewemail/js/rating.js</name></action>			
		</reference>
		<reference name="root">
			<action method="setTemplate"><template>page/2columns-left.phtml</template></action>
		</reference>
		<reference name="content">
			<block type="reviewemail/form" name="form" template="magmodules/reviewemail/form.phtml" />
		</reference>
	</reviewemail_form_index>	
</layout> 