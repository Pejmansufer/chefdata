<?xml version="1.0"?>
<layout version="0.1.0">
	<catalog_category_layered>
		<update handle="ewlayerednav_catalog_category_layered_handle" ewifhelper="ewlayerednav/layout/isBrowseEnabled" ewminify_inherit="1"/>
	</catalog_category_layered>
	
	<catalogsearch_result_index>
		<update handle="ewlayerednav_catalogsearch_result_index_handle" ewifhelper="ewlayerednav/layout/isSearchEnabled" ewminify_inherit="1"/>
	</catalogsearch_result_index>
	
	<ewlayerednav_navigation_browse>
		<remove name="right" />
		<remove name="left" />
		
		<update handle="catalog_category_layered"/>
		<block type="catalog/layer_view" name="navigation" template="extendware/ewlayerednav/catalog/layer/view.phtml" />
	</ewlayerednav_navigation_browse>
	
	<ewlayerednav_navigation_search>
		<remove name="right" />
		<remove name="left" />
		
		<update handle="catalogsearch_result_index"/>
		<block type="catalogsearch/layer" name="navigation" template="extendware/ewlayerednav/catalog/layer/view.phtml" />
	</ewlayerednav_navigation_search>
	
	<ewlayerednav_catalog_category_layered_handle>
		<update handle="ewcore_core_handle" ewminify_inherit="1"/>
		<update handle="ewcore_ajax_handle" ewminify_inherit="1"/>
		<reference name="head">
			<action method="addCss"  ewminify_ignore_order="1"><stylesheet>extendware/ewlayerednav/css/general.css</stylesheet></action>
			<action method="addItem" ewminify_ignore_order="1"><type>ewgenerated_js</type><name>ewlayerednav/js_general</name></action>
		</reference>
		<reference name="catalog.leftnav">
			<action method="setTemplate">
				<template>extendware/ewlayerednav/catalog/layer/view.phtml</template>
			</action>
		</reference>
	</ewlayerednav_catalog_category_layered_handle>
	
	<ewlayerednav_catalogsearch_result_index_handle>
		<update handle="ewcore_core_handle" ewminify_inherit="1"/>
		<update handle="ewcore_ajax_handle" ewminify_inherit="1"/>
		<reference name="head">
			<action method="addCss"><stylesheet>extendware/ewlayerednav/css/general.css</stylesheet></action>
			<action method="addItem"><type>ewgenerated_js</type><name>ewlayerednav/js_general</name></action>
		</reference>
		<reference name="catalogsearch.leftnav">
			<action method="setTemplate">
				<template>extendware/ewlayerednav/catalog/layer/view.phtml</template>
			</action>
		</reference>
	</ewlayerednav_catalogsearch_result_index_handle>
</layout>