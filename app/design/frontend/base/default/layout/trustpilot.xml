<?xml version="1.0" encoding="UTF-8"?>
<layout version="1.0.0">
    <default>
        <reference name="head">
            <block type="trustpilot/header" name="trustpilot_header_script" template="trustpilot/header.phtml"></block>
        </reference>
    </default>
    <checkout_onepage_success>
        <reference name="before_body_end">
            <block type="trustpilot/success"
                   name="trustpilot_success"
                   template="trustpilot/success.phtml" />
        </reference>
    </checkout_onepage_success>

    <!-- Homepage -->
    <cms_index_index>
        <reference name="head">
            <block type="trustpilot/trustbox"
                name="trustpilot_trustbox_homepage"
                template="trustpilot/trustbox.phtml" />
        </reference>
    </cms_index_index>

    <!-- Category page -->
    <catalog_category_view>
        <reference name="head">
            <block type="trustpilot/trustbox"
                name="trustpilot_trustbox_category"
                template="trustpilot/trustbox.phtml" />
        </reference>
    </catalog_category_view>

    <!-- Product page -->
    <catalog_product_view>
        <reference name="head">
            <block type="trustpilot/trustbox"
                name="trustpilot_trustbox_product"
                template="trustpilot/trustbox.phtml" />
        </reference>
    </catalog_product_view>

</layout>