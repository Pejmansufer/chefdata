<table width="100%">
	<tr>
		<?php 		
			$order = $this->getOrder(); 

			foreach($order->getAllItems() as $_item) {	
				$items[] = array('id' => $_item->getProductId(), 'price' => $_item->getPrice());
			}
			
			krsort($items);

			foreach ($items as $item) {
				$product = Mage::getModel('catalog/product')->setStoreId($order->getStoreId())->load($item['id']);
				$upsell_products = $product->getUpSellProducts(); 
				foreach($upsell_products as $upsell) {
					$upsell_product = Mage::getModel('catalog/product')->setStoreId($order->getStoreId())->load($upsell->getId());				
					if($upsell_product->getStatus() == '1') {
						$upsell_items[] = array('id' => $upsell->getId());				
					}
				}
			}

			$width = (100 / count($upsell_items));
			if($width > 25) $width = 25;
			$i = 0;

			foreach($upsell_items as $item) {

				$product = Mage::getModel('catalog/product')->setStoreId($order->getStoreId())->load($item['id']);
			
				try { 
					$img = Mage::helper('catalog/image')->init($product, 'image')->resize(100);
				} catch (Exception $e) {
					$img = Mage::app()->getStore($order->getStoreId())->getBaseUrl() . '/skin/frontend/base/default/images/catalog/product/placeholder/small_image.jpg';
				}

				if($img) {
					$img = str_replace('https','http', $img);
				}

				$upsell_name= $product->getName();	

				$price = '';
				if($product->getPrice() > 0) {
					$price = Mage::helper('core')->currency($product->getFinalPrice(), true, false);
				}

				$upsell_price = number_format($product->getPrice(),2);	
				echo '<td width="' . $width . '%" align="center">';
				echo ' <a href="' . $product->getProductUrl() .'"><img src="' . $img .'"></a><br/> <a href="' . $product->getProductUrl() .'">' . $upsell_name . '</a> <br/>';		
				echo $price;
				echo '</td>';	
				if (++$i == 4) break;
			}
		?>
	</tr>
</table>