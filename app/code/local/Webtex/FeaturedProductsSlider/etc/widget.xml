<?xml version="1.0"?>
<widgets>
    <webtex_featuredproductsslider type="featuredproductsslider/slider" translate="name description" module="featuredproductsslider">
        <name>Featured Products Slider</name>
        <description>Slider Parametrs</description>
        <parameters>
            <template translate="label">
                <label>Frontend Template</label>
                <visible>1</visible>
                <required>1</required>
                <type>select</type>
                <values>
                    <horizontal translate="label">
                        <value>webtex/featuredproductsslider/horizontal-slider.phtml</value>
                        <label>Horizontal template</label>
                    </horizontal>
                    <vertical translate="label">
                        <value>webtex/featuredproductsslider/vertical-slider.phtml</value>
                        <label>Vertical template</label>
                    </vertical>
                </values>
            </template>
            <category translate="label">
                <visible>1</visible>
                <required>0</required>
                <label>Category</label>
                <description>Leave it blank, if no need category filter</description>
                <type>label</type>
                <helper_block>
                    <type>adminhtml/catalog_category_widget_chooser</type>
                    <data>
                        <button translate="open">
                            <open>Select Category...</open>
                        </button>
                    </data>
                </helper_block>
                <sort_order>10</sort_order>
            </category>
            <products type="complex" translate="label">
                <visible>1</visible>
                <required>1</required>
                <label>Products</label>
                <type>featuredproductsslider/adminhtml_chooser_products</type>
                <sort_order>20</sort_order>
            </products>
            <products_count translate="label">
                <required>0</required>
                <visible>1</visible>
                <value></value>
                <label>Number of Products to Display</label>
                <type>text</type>
                <sort_order>30</sort_order>
            </products_count>
            <block_name translate="label">
                <required>1</required>
                <visible>1</visible>
                <label>Block Name</label>
                <type>text</type>
                <sort_order>30</sort_order>
            </block_name>
            <countries>
                <visible>1</visible>
                <required>0</required>
                <label>Countries</label>
                <type>multiselect</type>
                <source_model>featuredproductsslider/system_config_source_country</source_model>
                <sort_order>40</sort_order>
            </countries>
            <date_from type="complex" translate="label">
                <visible>1</visible>
                <required>0</required>
                <label>Date From</label>
                <type>featuredproductsslider/adminhtml_chooser_date_from</type>
                <sort_order>50</sort_order>
            </date_from>
            <date_to type="complex" translate="label">
                <visible>1</visible>
                <required>0</required>
                <label>Date To</label>
                <type>featuredproductsslider/adminhtml_chooser_date_to</type>
                <sort_order>55</sort_order>
            </date_to>
            <display_options translate="label">
                <visible>1</visible>
                <required>1</required>
                <label>Display Options</label>
                <type>multiselect</type>
                <values>
                    <name translate="label">
                        <value>name</value>
                        <label>Product Name</label>
                    </name>
                    <thumbnail translate="label">
                        <value>thumbnail</value>
                        <label>Thumbnail</label>
                    </thumbnail>
                    <price translate="label">
                        <value>price</value>
                        <label>Price</label>
                    </price>
                    <add_to_cart translate="label">
                        <value>add_to_cart</value>
                        <label>Add to Cart button</label>
                    </add_to_cart>
                    <reviews translate="label">
                        <value>reviews</value>
                        <label>Reviews</label>
                    </reviews>
                    <sku translate="label">
                        <value>sku</value>
                        <label>SKU</label>
                    </sku>
                </values>
                <sort_order>60</sort_order>
            </display_options>
        </parameters>
    </webtex_featuredproductsslider>
</widgets>
