<?xml version="1.0"?>
<config>
	<modules>
        <Extendware_EWLayeredNav>
        	<extendware>
	        	<settings>
	        		<scopes>
		        		<main>
							<tabs>
						        <main translate="label comment ewhelp" module="ewlayerednav">
						            <label>Layered Navigation</label>
						            <sort_order>100</sort_order>
						        </main>
						    </tabs>
							<sections>
								<ewlayerednav translate="label comment ewhelp" module="ewlayerednav">
									<class>separator-top</class>
									<label>General</label>
									<tab>main</tab>
									<frontend_type>text</frontend_type>
									<sort_order>100</sort_order>
									<show_in_default>1</show_in_default>
									<show_in_website>1</show_in_website>
									<show_in_store>1</show_in_store>
									<groups>
										<general translate="label comment ewhelp" module="ewlayerednav">
						                    <label>General</label>
						                    <frontend_type>text</frontend_type>
						                    <sort_order>10</sort_order>
						                    <show_in_default>1</show_in_default>
						                    <show_in_website>1</show_in_website>
						                    <show_in_store>1</show_in_store>
						                    <fields>
						                        <browse_enabled translate="label comment ewhelp">
						                            <label>Browse Status</label>
						                            <frontend_type>select</frontend_type>
						                            <source_model>ewcore/adminhtml_config_data_option_enabledisable</source_model>
						                            <sort_order>1</sort_order>
						                            <show_in_default>1</show_in_default>
						                            <show_in_website>1</show_in_website>
						                            <show_in_store>1</show_in_store>
						                            <comment><![CDATA[Enable when browsing products]]></comment>
						                        </browse_enabled>
						                        <search_enabled translate="label comment ewhelp">
						                            <label>Search Status</label>
						                            <frontend_type>select</frontend_type>
						                            <source_model>ewcore/adminhtml_config_data_option_enabledisable</source_model>
						                            <sort_order>1</sort_order>
						                            <show_in_default>1</show_in_default>
						                            <show_in_website>1</show_in_website>
						                            <show_in_store>1</show_in_store>
						                            <comment><![CDATA[Enable when searching products]]></comment>
						                        </search_enabled>
						                    </fields>
						                </general>
						                <appearance translate="label comment ewhelp" module="ewlayerednav">
						                    <label>Appearance</label>
						                    <frontend_type>text</frontend_type>
						                    <sort_order>20</sort_order>
						                    <show_in_default>1</show_in_default>
						                    <show_in_website>1</show_in_website>
						                    <show_in_store>1</show_in_store>
						                    <fields>
						                    	<category_filter_type translate="label comment ewhelp">
						                            <label>Categories Filter</label>
						                            <frontend_type>select</frontend_type>
						                            <source_model>ewlayerednav/adminhtml_config_data_option_category</source_model>
						                            <sort_order>10</sort_order>
						                            <show_in_default>1</show_in_default>
						                            <show_in_website>1</show_in_website>
						                            <show_in_store>1</show_in_store>
						                        </category_filter_type>
						                    	<price_filter_type translate="label comment ewhelp">
						                            <label>Price Filter</label>
						                            <frontend_type>select</frontend_type>
						                            <source_model>ewlayerednav/adminhtml_config_data_option_price</source_model>
						                            <sort_order>20</sort_order>
						                            <show_in_default>1</show_in_default>
						                            <show_in_website>1</show_in_website>
						                            <show_in_store>1</show_in_store>
						                        </price_filter_type>
						                        <max_visible_attributes translate="label comment ewhelp">
						                            <label>Max Attributes</label>
						                            <frontend_type>text</frontend_type>
						                            <sort_order>30</sort_order>
						                            <show_in_default>1</show_in_default>
						                            <show_in_website>1</show_in_website>
						                            <show_in_store>1</show_in_store>
						                            <validators>
						                            	<validator>
						                            		<model>ewcore/data_validator_integer</model>
						                            		<options>
						                            			<min_value>0</min_value>
						                            		</options>
						                            	</validator>
						                            </validators>
						                            <validate>required-entry validate-zero-or-greater</validate>
						                            <comment><![CDATA[Attributes beyond the number specified will be hidden until user clicks to show them. Set 0 to never hide attributes. If attribute sorting is enabled, selected attributes will not be hidden.]]></comment>
						                        </max_visible_attributes>
						                        <max_visible_attribute_options translate="label comment ewhelp">
						                            <label>Max Attribute Options</label>
						                            <frontend_type>text</frontend_type>
						                            <sort_order>40</sort_order>
						                            <show_in_default>1</show_in_default>
						                            <show_in_website>1</show_in_website>
						                            <show_in_store>1</show_in_store>
						                            <validators>
						                            	<validator>
						                            		<model>ewcore/data_validator_integer</model>
						                            		<options>
						                            			<min_value>0</min_value>
						                            		</options>
						                            	</validator>
						                            </validators>
						                            <validate>required-entry validate-zero-or-greater</validate>
						                            <comment><![CDATA[Options beyond the number specified will be hidden until user clicks to show them. Set 0 to never hide options. Selected options will never be hidden.]]></comment>
						                        </max_visible_attribute_options>
						                        <min_attribute_options translate="label comment ewhelp">
						                            <label>Minimum Filter Options</label>
						                             <frontend_type>text</frontend_type>
						                            <sort_order>41</sort_order>
						                            <show_in_default>1</show_in_default>
						                            <show_in_website>1</show_in_website>
						                            <show_in_store>1</show_in_store>
						                            <validators>
						                            	<validator>
						                            		<model>ewcore/data_validator_integer</model>
						                            		<options>
						                            			<min_value>1</min_value>
						                            		</options>
						                            	</validator>
						                            </validators>
						                            <validate>required-entry validate-greater-than-zero</validate>
						                            <comment><![CDATA[Filters that do not have at least this number of options will be hidden]]></comment>
						                        </min_attribute_options>
						                        <max_height translate="label comment ewhelp">
						                            <label>Maximum Height (px)</label>
						                            <frontend_type>text</frontend_type>
						                            <sort_order>50</sort_order>
						                            <show_in_default>1</show_in_default>
						                            <show_in_website>1</show_in_website>
						                            <show_in_store>1</show_in_store>
						                            <validators>
						                            	<validator>
						                            		<model>ewcore/data_validator_integer</model>
						                            		<options>
						                            			<min_value>0</min_value>
						                            		</options>
						                            	</validator>
						                            </validators>
						                            <validate>required-entry validate-zero-or-greater</validate>
						                            <comment><![CDATA[Attributes box beyond this height will use scrollbars. Set to 0 to have no height constraint]]></comment>
						                        </max_height>
						                    </fields>
						                </appearance>
						                <behavior translate="label comment ewhelp" module="ewlayerednav">
						                    <label>Behavior</label>
						                    <frontend_type>text</frontend_type>
						                    <sort_order>30</sort_order>
						                    <show_in_default>1</show_in_default>
						                    <show_in_website>1</show_in_website>
						                    <show_in_store>1</show_in_store>
						                    <fields>
						                    	<ajax_enabled translate="label comment ewhelp">
						                            <label>AJAX Status</label>
						                            <frontend_type>select</frontend_type>
						                            <source_model>ewcore/adminhtml_config_data_option_enabledisable</source_model>
						                            <sort_order>1</sort_order>
						                            <show_in_default>1</show_in_default>
						                            <show_in_website>1</show_in_website>
						                            <show_in_store>1</show_in_store>
						                            <comment><![CDATA[Disable to turn off all AJAX]]></comment>
						                        </ajax_enabled>
						                    	<price_first_enabled translate="label comment ewhelp">
						                            <label>Show Price Filter First</label>
						                            <frontend_type>select</frontend_type>
						                            <source_model>ewcore/adminhtml_config_data_option_enabledisable</source_model>
						                            <sort_order>10</sort_order>
						                            <show_in_default>1</show_in_default>
						                            <show_in_website>1</show_in_website>
						                            <show_in_store>1</show_in_store>
						                            <comment><![CDATA[Enable this to show the price filter directly after the category list no matter the original order of attributes]]></comment>
						                        </price_first_enabled>
						                        <empty_filter_options_enabled translate="label comment ewhelp">
						                            <label>Show Empty Filter Options</label>
						                            <frontend_type>select</frontend_type>
						                            <source_model>ewcore/adminhtml_config_data_option_enabledisable</source_model>
						                            <sort_order>20</sort_order>
						                            <show_in_default>1</show_in_default>
						                            <show_in_website>1</show_in_website>
						                            <show_in_store>1</show_in_store>
						                            <comment><![CDATA[Enable this to show filter options that have 0 matching products. Disabling this will use the per attribute setting]]></comment>
						                        </empty_filter_options_enabled>
						                        <category_reset_filters_enabled translate="label comment ewhelp">
						                            <label>Category Reset Filters</label>
						                            <frontend_type>select</frontend_type>
						                            <source_model>ewcore/adminhtml_config_data_option_enabledisable</source_model>
						                            <sort_order>40</sort_order>
						                            <show_in_default>1</show_in_default>
						                            <show_in_website>1</show_in_website>
						                            <show_in_store>1</show_in_store>
						                            <comment><![CDATA[Reset filters when selecting a new category]]></comment>
						                        </category_reset_filters_enabled>
						                        <attribute_sorting_enabled translate="label comment ewhelp">
						                            <label>Attribute Sorting</label>
						                            <frontend_type>select</frontend_type>
						                            <source_model>ewcore/adminhtml_config_data_option_enabledisable</source_model>
						                            <sort_order>41</sort_order>
						                            <show_in_default>1</show_in_default>
						                            <show_in_website>1</show_in_website>
						                            <show_in_store>1</show_in_store>
						                            <comment><![CDATA[Attributes with selected options will appear before other attributes.]]></comment>
						                        </attribute_sorting_enabled>
						                        <attribute_option_sorting_enabled translate="label comment ewhelp">
						                            <label>Attribute Option Sorting</label>
						                            <frontend_type>select</frontend_type>
						                            <source_model>ewcore/adminhtml_config_data_option_enabledisable</source_model>
						                            <sort_order>42</sort_order>
						                            <show_in_default>1</show_in_default>
						                            <show_in_website>1</show_in_website>
						                            <show_in_store>1</show_in_store>
						                            <comment><![CDATA[Selected attribute options will appear first in the option list.]]></comment>
						                        </attribute_option_sorting_enabled>
						                        <remove_links_enabled translate="label comment ewhelp">
						                            <label>Remove Links</label>
						                            <frontend_type>select</frontend_type>
						                            <source_model>ewcore/adminhtml_config_data_option_enabledisable</source_model>
						                            <sort_order>50</sort_order>
						                            <show_in_default>1</show_in_default>
						                            <show_in_website>1</show_in_website>
						                            <show_in_store>1</show_in_store>
						                            <comment><![CDATA[Enable this to prevent "duplicate content" penalties for search engines. This will require customers to have javascript enabled to use filters]]></comment>
						                        </remove_links_enabled>
						                    </fields>
						                </behavior>
									</groups>
								</ewlayerednav>
							</sections>
						</main>
					</scopes>
				</settings>
			</extendware>
		</Extendware_EWLayeredNav>
	</modules>
</config>
