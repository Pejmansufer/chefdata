<config>
    <sections>
        <ms_productdetailshipping module="ms_productdetailshipping" label="label">
            <class>separator-top</class>
            <label>Product Page Shipping Quote</label>
            <tab>catalog</tab>
            <frontend_type>text</frontend_type>
            <sort_order>45</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <settings translate="label">
                    <label>Product Page Shipping Quote Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enable  Product Page Shipping Quote</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <display_position translate="label comment">
                            <label>Display Position</label>
                            <frontend_type>select</frontend_type>
                            <!--<comment>Position of the block depends on your theme layout</comment>-->
                            <source_model>ms_productdetailshipping/config_source_position</source_model>
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </display_position>
                        <use_country translate="label">
                            <label>Show Country Dropdown</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </use_country>
                        <use_region translate="label">
                            <label>Show State/Region</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>200</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </use_region>
                        <use_city translate="label">
                            <label>Show City</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>300</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </use_city>
                        <use_postcode translate="label">
                            <label>Show Zip/Postal Code</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>400</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </use_postcode>
                        <use_coupon_code translate="label">
                            <label>Show Coupon Code</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>500</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </use_coupon_code>
                        <use_cart translate="label">
                            <label>Show Include Cart Items</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>600</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </use_cart>
                        <use_cart_default translate="label">
                            <label>Include Cart Items by Default</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>700</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </use_cart_default>
						
						<cal_shipp translate="label">
                            <label>Calculate shipping Text</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>701</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </cal_shipp>
						<rate_shipp translate="label">
                            <label>Rate Text</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>702</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </rate_shipp>
						<shippmethod_shipp translate="label">
                            <label>Shpping method Text</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>703</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </shippmethod_shipp>
						<service_shipp translate="label">
                            <label>Service Text</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>704</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </service_shipp>
						<quote_shipp translate="label">
                            <label>Quote shipping text</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>705</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </quote_shipp>
						<loadtext_shipp translate="label">
                            <label>Loading Text</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>706</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </loadtext_shipp>
						<loadimage_shipp translate="label">
                            <label>Loading Image</label>
                            <frontend_type>image</frontend_type>
							<backend_model>adminhtml/system_config_backend_image</backend_model>
							<upload_dir config="system/filesystem/media" scope_info="1">adminimage</upload_dir>
                            <base_url type="media" scope_info="1">adminimage</base_url>
                            <sort_order>707</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </loadimage_shipp>
						<specificerrmsg translate="label"  module="core">
                            <label>Text after shipping quote</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>708</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </specificerrmsg>
                    </fields>
                </settings>
            </groups>
        </ms_productdetailshipping>
    </sections>
</config>
